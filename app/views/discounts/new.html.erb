<h1>Create New Discount</h1>
<h3>Merchant: <%= @merchant.name %></h3>
<br>
<%if flash[:messages] %>
<section id="errors">
  <% flash[:messages].each do |message| %>
    <h3>Error: <%= message %></h3>
  <%end%>
</section>
<%end%>
<br>
<div class="new_discount_form">
  <%= render partial: 'form', locals: { url: merchant_discounts_path(@merchant.id), method: :post } %>
</div>
